// IPv4 sent/received KB related rules
rule "IPv4 receiving KB threshold exceeded"
    when
        $ipv4 : Netdata(ipv4RSKbpsReceived > 220) from entry-point Netdata
    then
        System.out.println("IPv4 received Kbps threshold exceeded. Now receiving: " + $ipv4.getIpv4RSKbpsReceived() + " Kbps/s");
end
rule "IPv4 sent KB threshold exceeded"
    when
        $ipv4 : Netdata(ipv4RSKbpsSent > 220) from entry-point Netdata
    then
        System.out.println("IPv4 sent Kbps threshold exceeded. Now sending: " + $ipv4.getIpv4RSKbpsSent() + " Kbps/s");
end

// Uptime related rules
rule "Application component down"
    when
        $uptime : Netdata(upTime > 50, upTime < 150) from entry-point Netdata
    then
        System.out.println("ALERT: Application component down!");
end

// Low CPU, Memory and Disk usage related rules
rule "CPU usage less than 15% over time of X seconds (at least 10 seconds)"
    salience 1
    when
        $cpuLowTW : NetdataBucket(cpuCountLow >= 2) from entry-point NetdataBucket
    then
        System.out.println("ALERT: CPU usage is less than 15% for the last " + $cpuLowTW.getCpuCountLow()*5 + " seconds");
end
rule "Memory usage less than 5% over time of X seconds (at least 10 seconds)"
